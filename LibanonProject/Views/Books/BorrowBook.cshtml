@model LibanonProject.Models.Book

@{
    ViewBag.Title = "BorrowBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BorrowBook</h2>

@using (Html.BeginForm("BorrowBook", "Books", FormMethod.Post))
{
    @Html.AntiForgeryToken()

